{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "trace": true,
            "sourceMapPathOverrides": {
                "webpack:///./*":"${workspaceRoot}\\*" 
            },
            "runtimeArgs": [
                "--disable-session-crashed-bubble",
                "--disable-infobars"
            ]   
        }
    ]
}